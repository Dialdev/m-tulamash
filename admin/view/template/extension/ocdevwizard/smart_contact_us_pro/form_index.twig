<div class="modal-content" id="modal-form-constructor-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span>&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">{{ text_form }}</h4>
  </div>
  <div class="modal-body">
    <div id="content" class="row" style="padding-bottom: 0;">
      <div class="panel-body" style="padding-top: 0;padding-bottom: 0;">
        <ul class="nav nav-tabs" id="modal-setting-tabs">
          <li class="active dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-cog"></i> {{ tab_control_panel }} <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#modal-general-block" data-toggle="tab"><i class="fa fa-cogs"></i> {{ tab_general_setting }}</a></li>
              <li><a href="#modal-fields-block" data-toggle="tab"><i class="fa fa-bars"></i> {{ tab_fields_setting }}</a></li>
            </ul>
          </li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-language"></i> {{ tab_language_setting }} <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#modal-language-block" data-toggle="tab"><i class="fa fa-flag-o"></i> {{ tab_basic_language_setting }}</a></li>
            </ul>
          </li>
        </ul>
        <form method="post" enctype="multipart/form-data" id="modal-form" class="form-horizontal">
          <input type="hidden" style="display:none;" name="form_id" value="{{ form_id }}" />
          <div class="tab-content">
            <!-- TAB General block -->
            <div class="tab-pane fade active in" role="tabpanel" id="modal-general-block">
              <div class="form-group">
                <label class="col-sm-3 control-label" for="input-status">{{ text_activate_module }}</label>
                <div class="col-sm-9">
                  <select name="status" id="input-status" class="form-control">
                    {% if (status) %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-3 control-label">{{ text_new_saved_record_admin_alert }}</label>
                <div class="col-sm-9">
                  <div class="btn-group btn-toggle" data-toggle="buttons">
                    <label class="btn {{ new_saved_record_admin_alert == 1 ? 'active btn-success' : 'btn-default' }}">
                      <input type="radio"
                        name="new_saved_record_admin_alert"
                        value="1"
                        autocomplete="off"
                        {{ new_saved_record_admin_alert == 1 ? 'checked="checked"' : '' }}
                      />{{ text_yes }}
                    </label>
                    <label class="btn {{ new_saved_record_admin_alert == 0 ? 'active btn-success' : 'btn-default' }}">
                      <input type="radio"
                        name="new_saved_record_admin_alert"
                        value="0"
                        autocomplete="off"
                        {{ new_saved_record_admin_alert == 0 ? 'checked="checked"' : '' }}
                      />{{ text_no }}
                    </label>
                  </div>
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-3 control-label" for="input-email_for_notification">{{ text_email_for_notification }}</label>
                <div class="col-sm-9">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                    <input value="{{ email_for_notification }}" type="text" name="email_for_notification" class="form-control" id="input-email_for_notification" />
                  </div>
                  <div class="modal-error-block" id="modal-error-email-for-notification"></div>
                  <div class="alert alert-info" role="alert"><i class="fa fa-info-circle"></i> {{ text_email_for_notification_faq }}</div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-3 control-label">{{ text_email_template }}</label>
                <div class="col-sm-9">
                  <div class="btn-group-vertical btn-toggle" data-toggle="buttons">
                    <label class="btn {{ allow_email_template == 1 ? 'active btn-success' : 'btn-default' }}{% if (not templates) %} disabled{% endif %}">
                      <input type="radio"
                        name="allow_email_template"
                        value="1"
                        autocomplete="off"
                        {{ allow_email_template == 1 ? 'checked="checked"' : '' }}
                      />{{ text_custom_html_template }}
                    </label>
                    <label class="btn {{ allow_email_template == 2 ? 'active btn-success' : 'btn-default' }}">
                      <input type="radio"
                        name="allow_email_template"
                        value="2"
                        autocomplete="off"
                        {{ allow_email_template == 2 ? 'checked="checked"' : '' }}
                      />{{ text_default_html_template }}
                    </label>
                  </div>
                  <div class="alert alert-info" role="alert"><i class="fa fa-info-circle"></i> {{ text_email_template_faq }}</div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-3 control-label">{{ text_email_template_by_default }}</label>
                <div class="col-sm-9">
                  {% if (templates) %}
                  {% set row_height = 55 %} {% set row = 0 %} {% for template in templates %}
                  {% if (row < 5) %} {% set row_height = row_height*1.26 %} {% endif %} {% set row = row + 1 %}
                  {% endfor %}
                  <div class="well well-sm" style="height: {{ row_height }}px; overflow: auto;">
                    {% for template in templates %}
                    <div class="radio">
                      <label>
                        <input type="radio" name="email_template_by_default" value="{{ template['template_id'] }}" {{ email_template_by_default is defined and email_template_by_default == template['template_id'] ? 'checked' : '' }} /> {{ template['name'] }} <b><a style="cursor:pointer;" onclick="open_email_template({id: '{{ template['template_id'] }}'});">[{{ text_edit_template }}]</a></b>
                      </label>
                    </div>
                    {% endfor %}
                  </div>
                  <div class="btn-group">
                    <button type="button" class="btn btn-default btn-xs" onclick="$(this).parent().parent().find(':radio').attr('checked', false);">{{ text_unselect_all }}</button>
                  </div>
                  {% else %}
                    <div class="well well-sm" style="height: 69.3px; overflow: auto;">
                    {{ text_no_templates }}
                    </div>
                  {% endif %}
                  <div class="alert alert-info" role="alert">{{ text_email_template_by_default_faq }}</div>
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-3 control-label">{{ text_stores }}</label>
                <div class="col-sm-9">
                  {% set row_height = 55 %} {% set row = 0 %} {% for store in all_stores %}
                  {% if (row < 5) %} {% set row_height = row_height*1.26 %} {% endif %} {% set row = row + 1 %}
                  {% endfor %}
                  <div class="well well-sm" style="height: {{ row_height }}px; overflow: auto;">
                    {% for store in all_stores %}
                    <div class="checkbox">
                      <label>
                        <input
                          type="checkbox"
                          name="stores[]"
                          value="{{ store['store_id'] }}" {{ stores is not empty and store['store_id'] in stores ? 'checked' : '' }}
                        /> {{ store['name'] }}
                      </label>
                    </div>
                    {% endfor %}
                  </div>
                  <div class="btn-group">
                    <button type="button" class="btn btn-default btn-xs" onclick="$(this).parent().parent().find(':checkbox').trigger('click').attr('checked', true);">{{ text_select_all }}</button>
                    <button type="button" class="btn btn-default btn-xs" onclick="$(this).parent().parent().find(':checkbox').attr('checked', false);">{{ text_unselect_all }}</button>
                  </div>
                  <div class="modal-error-block" id="modal-error-stores"></div>
                  <div class="alert alert-info" role="alert"><i class="fa fa-info-circle"></i> {{ text_stores_faq }}</div>
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-3 control-label">{{ text_customer_groups }}</label>
                <div class="col-sm-9">
                  {% set row_height = 55 %} {% set row = 0 %} {% for customer_group in all_customer_groups %}
                  {% if (row < 5) %} {% set row_height = row_height*1.26 %} {% endif %} {% set row = row + 1 %}
                  {% endfor %}
                  <div class="well well-sm" style="height: {{ row_height }}px; overflow: auto;">
                    {% for customer_group in all_customer_groups %}
                    <div class="checkbox">
                      <label>
                        <input
                          type="checkbox"
                          name="customer_groups[]"
                          value="{{ customer_group['customer_group_id'] }}" {{ customer_groups is not empty and customer_group['customer_group_id'] in customer_groups ? 'checked' : '' }}
                        /> {{ customer_group['name'] }}
                      </label>
                    </div>
                    {% endfor %}
                  </div>
                  <div class="btn-group">
                    <button type="button" class="btn btn-default btn-xs" onclick="$(this).parent().parent().find(':checkbox').trigger('click').attr('checked', true);">{{ text_select_all }}</button>
                    <button type="button" class="btn btn-default btn-xs" onclick="$(this).parent().parent().find(':checkbox').attr('checked', false);">{{ text_unselect_all }}</button>
                  </div>
                  <div class="modal-error-block" id="modal-error-customer-groups"></div>
                  <div class="alert alert-info" role="alert"><i class="fa fa-info-circle"></i> {{ text_customer_groups_faq }}</div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-3 control-label">{{ text_select_terms }}</label>
                <div class="col-sm-9">
                  <select name="require_information" class="form-control">
                    <option value="">{{ text_no }}</option>
                    {% for information in all_informations %}
                      <option value="{{ information['information_id'] }}" {{ require_information is not empty and require_information == information['information_id'] ? 'selected' : '' }}>{{ information['title'] }}</option>
                    {% endfor %}
                  </select>
                  <div class="alert alert-info" role="alert"><i class="fa fa-info-circle" aria-hidden="true"></i> {{ text_select_terms_faq }}</div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-3 control-label">{{ text_hide_info_message }}</label>
                <div class="col-sm-9">
                  <select name="hide_info_message" class="form-control">
                    <option value="0" {{ hide_info_message == 0 ? 'selected="selected"' : '' }} >{{ text_no }}</option>
                    <option value="1" {{ hide_info_message == 1 ? 'selected="selected"' : '' }} >{{ text_before_products_list }}</option>
                    <option value="2" {{ hide_info_message == 2 ? 'selected="selected"' : '' }} >{{ text_after_products_list }}</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-3 control-label">{{ text_display_type }}</label>
                <div class="col-sm-9">
                  <select name="display_type" class="form-control">
                    {% if (display_type == 1) %}
                      <option value="1" selected="selected">{{ text_in_popup }}</option>
                      <option value="2">{{ text_in_static }}</option>
                      <option value="3">{{ text_in_sidebar }}</option>
                    {% elseif (display_type == 2) %}
                      <option value="1">{{ text_in_popup }}</option>
                      <option value="2" selected="selected">{{ text_in_static }}</option>
                      <option value="3">{{ text_in_sidebar }}</option>
                    {% else %}
                      <option value="1">{{ text_in_popup }}</option>
                      <option value="2">{{ text_in_static }}</option>
                      <option value="3" selected="selected">{{ text_in_sidebar }}</option>
                    {% endif %}
                  </select>
                  <div class="alert alert-info display-type-1" role="alert"><i class="fa fa-info-circle" aria-hidden="true"></i> {{ text_in_popup_faq }}</div>
                  <div class="alert alert-info display-type-2" role="alert"><i class="fa fa-info-circle" aria-hidden="true"></i> {{ text_in_static_faq }}</div>
                  <div class="alert alert-info display-type-3" role="alert"><i class="fa fa-info-circle" aria-hidden="true"></i> {{ text_in_sidebar_faq }}</div>
                </div>
              </div>
              <div class="form-group display-type-1">
                <label class="col-sm-3 control-label">{{ text_popup_button_type }}</label>
                <div class="col-sm-9">
                  <select name="popup_button_type" class="form-control">
                    {% if (popup_button_type == 1) %}
                      <option value="1" selected="selected">{{ text_static_button }}</option>
                      <option value="2">{{ text_float_button }}</option>
                    {% else %}
                      <option value="1">{{ text_static_button }}</option>
                      <option value="2" selected="selected">{{ text_float_button }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group required display-type-1 popup-button-type-1">
                <label class="col-sm-3 control-label" for="input-add_id_selector">{{ text_add_id_selector }}</label>
                <div class="col-sm-9">
                  <div class="input-group">
                    <span class="input-group-addon">{{ text_css_id_indicator }}</span>
                    <input value="{{ add_id_selector }}" type="text" name="add_id_selector" class="form-control" placeholder="{{ text_add_id_selector_ph }}"/>
                  </div>
                  <div class="modal-error-block" id="modal-error-add-id-selector"></div>
                  <div class="alert alert-info" role="alert"><i class="fa fa-info-circle" aria-hidden="true"></i> {{ text_add_id_selector_faq }}</div>
                </div>
              </div>
              <div class="form-group display-type-1 popup-button-type-1">
                <label class="col-sm-3 control-label" for="input-button_class">{{ text_button_class }}</label>
                <div class="col-sm-9">
                  <div class="input-group">
                    <span class="input-group-addon">{{ text_css_class_indicator }}</span>
                    <input value="{{ button_class }}" type="text" name="button_class" class="form-control" placeholder="{{ text_button_class_ph }}"/>
                  </div>
                  <div class="alert alert-info" role="alert"><i class="fa fa-info-circle" aria-hidden="true"></i> {{ text_button_class_faq }}</div>
                </div>
              </div>
              <div class="form-group required display-type-1 popup-button-type-2">
                <label class="col-sm-3 control-label" for="input-float_button_id_selector">{{ text_float_button_id_selector }}</label>
                <div class="col-sm-9">
                  <div class="input-group">
                    <span class="input-group-addon">{{ text_css_id_indicator }}</span>
                    <input value="{{ float_button_id_selector }}" type="text" name="float_button_id_selector" class="form-control" readonly/>
                  </div>
                  <div class="modal-error-block" id="modal-error-float-button-id-selector"></div>
                  <div class="alert alert-info" role="alert"><i class="fa fa-info-circle" aria-hidden="true"></i> {{ text_float_button_id_selector_faq }}</div>
                </div>
              </div>
              <div class="form-group display-type-3">
                <label class="col-sm-3 control-label">{{ text_sidebar_type }}</label>
                <div class="col-sm-9">
                  <select name="sidebar_type" class="form-control">
                    {% if (sidebar_type == 1) %}
                      <option value="1" selected="selected">{{ text_sidebar_left_side }}</option>
                      <option value="2">{{ text_sidebar_right_side }}</option>
                    {% else %}
                      <option value="1">{{ text_sidebar_left_side }}</option>
                      <option value="2" selected="selected">{{ text_sidebar_right_side }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group required display-type-3">
                <label class="col-sm-3 control-label" for="input-sidebar_button_id_selector">{{ text_sidebar_button_id_selector }}</label>
                <div class="col-sm-9">
                  <div class="input-group">
                    <span class="input-group-addon">{{ text_css_id_indicator }}</span>
                    <input value="{{ sidebar_button_id_selector }}" type="text" name="sidebar_button_id_selector" class="form-control" readonly/>
                  </div>
                  <div class="modal-error-block" id="modal-error-sidebar-button-id-selector"></div>
                  <div class="alert alert-info" role="alert"><i class="fa fa-info-circle" aria-hidden="true"></i> {{ text_sidebar_button_id_selector_faq }}</div>
                </div>
              </div>
              <div class="form-group display-type-1 popup-button-type-1">
                <label class="col-sm-3 control-label">{{ text_location }}</label>
                <div class="col-sm-9">
                  <div class="btn-group" data-toggle="buttons">
                    <label class="btn btn-success {{ location == 1 ? 'active' : '' }}">
                      <input type="radio"
                        name="location"
                        value="1"
                        autocomplete="off"
                        {{ location == 1 ? 'checked="checked"' : '' }}
                      />{{ text_outside_before }}
                    </label>
                    <label class="btn btn-success {{ location == 2 ? 'active' : '' }}">
                      <input type="radio"
                        name="location"
                        value="2"
                        autocomplete="off"
                        {{ location == 2 ? 'checked="checked"' : '' }}
                      />{{ text_inside_left }}
                    </label>
                    <label class="btn btn-success {{ location == 3 ? 'active' : '' }}">
                      <input type="radio"
                        name="location"
                        value="3"
                        autocomplete="off"
                        {{ location == 3 ? 'checked="checked"' : '' }}
                      />{{ text_inside_right }}
                    </label>
                    <label class="btn btn-success {{ location == 4 ? 'active' : '' }}">
                      <input type="radio"
                        name="location"
                        value="4"
                        autocomplete="off"
                        {{ location == 4 ? 'checked="checked"' : '' }}
                      />{{ text_outside_after }}
                    </label>
                  </div>
                  <div class="modal-error-block" id="modal-error-location"></div>
                  <div class="alert alert-info" role="alert"><i class="fa fa-info-circle" aria-hidden="true"></i> {{ text_location_faq }}</div>
                </div>
              </div>
              <div class="form-group display-type-2">
                <label class="col-sm-3 control-label">{{ text_static_position }}</label>
                <div class="col-sm-9">
                  <select name="position" class="form-control">
                    {% if (position == 'column_left') %}
                      <option value="column_left" selected="selected">{{ text_static_position_1 }}</option>
                      <option value="column_right">{{ text_static_position_2 }}</option>
                      <option value="content_top">{{ text_static_position_3 }}</option>
                      <option value="content_bottom">{{ text_static_position_4 }}</option>
                    {% elseif (position == 'column_right') %}
                      <option value="column_left">{{ text_static_position_1 }}</option>
                      <option value="column_right" selected="selected">{{ text_static_position_2 }}</option>
                      <option value="content_top">{{ text_static_position_3 }}</option>
                      <option value="content_bottom">{{ text_static_position_4 }}</option>
                    {% elseif (position == 'content_top') %}
                      <option value="column_left">{{ text_static_position_1 }}</option>
                      <option value="column_right">{{ text_static_position_2 }}</option>
                      <option value="content_top" selected="selected">{{ text_static_position_3 }}</option>
                      <option value="content_bottom">{{ text_static_position_4 }}</option>
                    {% else %}
                      <option value="column_left">{{ text_static_position_1 }}</option>
                      <option value="column_right">{{ text_static_position_2 }}</option>
                      <option value="content_top">{{ text_static_position_3 }}</option>
                      <option value="content_bottom" selected="selected">{{ text_static_position_4 }}</option>
                    {% endif %}
                  </select>
                  <div class="modal-error-block" id="modal-error-position"></div>
                  <div class="alert alert-info" role="alert"><i class="fa fa-info-circle" aria-hidden="true"></i> {{ text_static_position_faq }}</div>
                </div>
              </div>
              <div class="form-group display-type-2">
                <label class="col-sm-3 control-label" for="input-sort_order">{{ text_static_sort_order }}</label>
                <div class="col-sm-9">
                  <input value="{{ sort_order }}" type="text" name="sort_order" class="form-control" />
                  <div class="modal-error-block" id="modal-error-sort-order"></div>
                  <div class="alert alert-info" role="alert"><i class="fa fa-info-circle" aria-hidden="true"></i> {{ text_static_sort_order_faq }}</div>
                </div>
              </div>
            </div>
            <!-- TAB Fields block -->
            <div class="tab-pane fade" role="tabpanel" id="modal-fields-block">
              <div class="row">
                <div class="col-sm-3">
                  <ul class="nav nav-pills nav-stacked" id="fields-li">
                    {% set field_row = 1 %}
                    {% for field in field_data %}
                    <li class="no_field_title">
                      <input type="hidden" style="display:none;" name="field_data[{{ field_row }}][sort_order]" />
                      <input type="hidden" style="display:none;" name="field_data[{{ field_row }}][name]" value="field_{{ field_row }}" />
                      <a href="#tab-field{{ field_row }}" data-toggle="tab"><i class="fa fa-minus-circle" onclick="$('a[href=\'#tab-field{{ field_row }}\']').parent().remove(); $('#tab-field{{ field_row }}').remove(); $('#fields-li a:first').tab('show');"></i> {{ text_tab_field }} {{ 'â„–'~ field_row }}
                      <span class="field_title">({{ field['title'][default_language_id] is defined ? field['title'][default_language_id] : '' }})</span>
                      </a>
                    </li>
                    {% set field_row = field_row + 1 %}
                    {% endfor %}
                    <li id="field-add">
                      <button type="button" onclick="addField();" class="btn btn-success" style="width: 100%;"><i class="fa fa-plus-circle"></i> {{ button_add_field }}</button>
                    </li>
                  </ul>
                </div>
                <div class="col-sm-9">
                  <div class="tab-content">
                    {% set field_row = 1 %}
                    {% for field in field_data %}
                      <div class="tab-pane" id="tab-field{{ field_row }}">
                        <div class="form-group">
                          <label class="col-sm-3 control-label" for="input-activate{{ field_row }}">{{ text_activate_field }}</label>
                          <div class="col-sm-9">
                            <select name="field_data[{{ field_row }}][activate]" class="form-control" id="input-activate{{ field_row }}">
                              {% if (field['activate'] == 1) %}
                                <option value="1" selected="selected">{{ text_yes }}</option>
                                <option value="0">{{ text_no }}</option>
                              {% else %}
                                <option value="1">{{ text_yes }}</option>
                                <option value="0" selected="selected">{{ text_no }}</option>
                              {% endif %}
                            </select>
                          </div>
                        </div>
                        <div class="form-group required">
                          <label class="col-sm-3 control-label" for="input-title{{ field_row }}">{{ text_heading_field }}</label>
                          <div class="col-sm-9">
                            {% for language in languages %}
                            <div class="input-group" style="margin-bottom: 5px;">
                              <span class="input-group-addon"><img src="{{ language['image'] }}" title="{{ language['name'] }}" /></span>
                              <input type="text" name="field_data[{{ field_row }}][title][{{ language['language_id'] }}]" value="{{ field['title'][language['language_id']] is defined ? field['title'][language['language_id']] : '' }}" class="form-control" id="input-title{{ field_row }}" />
                            </div>
                            <div class="modal-error-block" id="modal-error-field-data-language-{{ field_row }}-title-{{ language['language_id'] }}"></div>
                            {% endfor %}
                          </div>
                        </div>
                        <div class="form-group required">
                          <label class="col-sm-3 control-label" for="input-view{{ field_row }}">{{ text_assign_functionality }}</label>
                          <div class="col-sm-9">
                            <select name="field_data[{{ field_row }}][view]" class="form-control" id="input-view{{ field_row }}">
                              <option value="0">{{ text_make_a_choice }}</option>
                              {% for key,view in field_view_data %}
                              {% if (key == 'file') %}
                              <option value="{{ key }}" disabled="disabled">{{ view }}</option>
                              {% else %}
                              <option value="{{ key }}" {{ field['view'] == key ? 'selected="selected"' : '' }}>{{ view }}</option>
                              {% endif %}
                              {% endfor %}
                            </select>
                            <div class="row" style="display:block;margin-top:15px">
                              <div class="col-sm-12">
                                {% for language in languages %}
